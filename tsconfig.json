{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths":{
      "@environments/*": ["environments/*"],
      "@i18n/*": ["app/i18n/*"],
      "@core/*": ["app/core/*"],
      "@shared/*": ["app/shared/*"],
      "@main/*": ["app/main/*"],
      "@remoteRepository/*": ["app/remoteRepository/*"],
      "@github/*": ["app/remoteRepository/github/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "jquery",
      "jasmine"
    ]
  }
}
